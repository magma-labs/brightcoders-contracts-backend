<div class="container mt-5">
  <div class="row">
    <div class="col-md-6 offset-md-3">
      <div class="d-flex justify-content-between align-items-center mb-4">
        <div class="create-nft-header">
          <h1>Create New NFT</h1>
        </div>
        <%= link_to 'Back', students_path, class: "btn btn-secondary" %>
      </div>
      <div class="student-name">
        <h2><%= @student.name %> <%= @student.surname %> <%= @student.second_surname %></h2>
      </div>
      <%= form_with model: [@student, @nft], local: true do |form| %>
        <div class="form-group mb-3">
          <%= form.label :course_id, "Course" %>
          <%= form.collection_select :course_id, Course.all, :id, :title, { prompt: "Select a course" }, class: "form-select" %>
        </div>
    
        <%= form.submit "Mint NFT", class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
</div>
