<div class="container">
  <h1 class="my-4">Students</h1>

  <div class="table-responsive">
    <table class="table table-striped table-hover">
      <thead class="table-dark">
        <tr>
          <th>Name</th>
          <th>Email</th>
          <th>Wallet Address</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% @students.each do |student| %>
          <tr>
            <td><%= student.name %></td>
            <td><%= student.email %></td>
            <td><%= student.wallet_address %></td>
            <td>
              <%= link_to 'Show', student, class: 'btn btn-primary btn-sm me-2' %>
              <%= link_to 'Edit', edit_student_path(student), class: 'btn btn-warning btn-sm me-2' %>
              <%= form_with url: student_path(student), method: :delete, class: "d-inline" do |form| %>
                <%= form.submit "Delete", class: "btn btn-danger btn-sm", data: { turbo_confirm: "Are you sure?" } %>
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>

  <%= link_to 'New Student', new_student_path, class: 'btn btn-primary mt-3' %>
</div>
